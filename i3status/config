# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
        color_good = "#989898"
        color_degraded = "#8c7f22"
        color_bad = "#be2422"
}

order += "volume master"
order += "ethernet _first_"
order += "wireless _first_"
order += "disk /"
order += "load"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "tztime local"


wireless _first_ {
	format_up = "  %quality » %essid "
	format_down = ""
}

ethernet _first_ {
        format_up = "🌐 %ip (%speed)"
        format_down = "🌐 down"
}

disk "/" {
        format = " HDD %percentage_used %avail"
        prefix_type = custom
        low_threshold = 20
}

cpu_usage {
        format= "⚡ CPU %usage"
        max_threshold= 75
}

load {
        format = " Load %1min"
}


memory {
        format = "🗃️ %used  > %percentage_used 📈 %available MEM"
        threshold_degraded = "1G"
        

}

tztime local {
        format = " %Y-%m-%d | %H:%M"
}


volume master{
        format = ": %volume"
        format_muted = "🔇 muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_temperature 0 {
        format = "♨️ %degrees °C"
        path = "/sys/class/hwmon/hwmon1/temp1_input"
}


